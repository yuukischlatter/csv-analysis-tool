{
  "name": "csv-analysis-tool",
  "version": "1.0.0",
  "description": "CSV Analysis Tool for Voltage/Displacement Diagrams",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "keywords": ["csv", "analysis", "electron", "schlatter"],
  "author": "Schlatter Industries",
  "license": "ISC",
  "dependencies": {
    "electron": "^37.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "wait-on": "^8.0.3",
    "webpack": "^5.100.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.schlatter.csv-analysis-tool",
    "productName": "CSV Analysis Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "portable": {
      "artifactName": "CSV-Analysis-Tool-portable.exe"
    }
  }
}